{
  "include": [
    "src/**/*.ts",
    "__test__/**/*.ts",
    "eslint.config.mjs",
    "jest.config.ts",
    "bundlib.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "lib": [],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  }
}
