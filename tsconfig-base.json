{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "isolatedModules": true,
    "lib": [],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUmdGlobalAccess": false,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "dist",
    "coverage"
  ]
}
